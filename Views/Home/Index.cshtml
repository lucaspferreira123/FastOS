<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Lista de Ordens de Serviço</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/dataTables/datatables.css" asp-append-version="true" />

</head>
<body class="bg-light">

    <button id="btnHamburger" class="btn btn-danger m-3" type="button" aria-label="Abrir menu" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
        <i class="bi bi-list fs-3"></i>
    </button>

    <div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasSidebar" data-bs-backdrop="false" aria-labelledby="offcanvasSidebarLabel">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title text-danger fw-bold">Menu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" onclick="FecharOffcanvasEBackdrop()" aria-label="Fechar"></button>
        </div>
        <div class="offcanvas-body p-0">
            <nav class="list-group list-group-flush">
                <a href="/Home" class="list-group-item list-group-item-action">Ordens de Serviço</a>
                <a href="/Cliente" class="list-group-item list-group-item-action">Cadastro de Clientes</a>
                <a href="/Produto" class="list-group-item list-group-item-action">Estoque de Peças</a>
                <a href="/Usuario" class="list-group-item list-group-item-action">Cadastro de Usuarios</a>
            </nav>
        </div>
    </div>

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-danger fw-bold">Ordens de Serviço</h2>
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalCadastroOS">
                <i class="bi bi-file-earmark-plus-fill me-1"></i> Nova OS
            </button>
        </div>
        </div>

       @*  <div class="mb-3">
            <input type="text" id="searchInput" class="form-control" placeholder="Buscar por cliente, serviço ou status...">
        </div> *@

        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="tabelaOrdens">
                <thead class="table-light">
                    <tr>
                        <th>Nº OS</th>
                        <th>Cliente</th>
                        <th>Pago</th>
                        <th>Status</th>
                        <th>Data Abertura</th>
                        <th>Previsão Entrega</th>
                        <th>Funções</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>

        <div class="modal" id="modalCadastroOS" tabindex="-1" aria-labelledby="modalCadastroOSLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content rounded-4 shadow-lg border-0">

                    <div class="modal-header bg-light border-bottom-0 pb-0">
                        <h5 class="modal-title text-danger fw-bold" id="modalCadastroOSLabel">Nova Ordem de Serviço</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>

                    <div class="modal-body">

                        <div class="row g-4">

                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Cliente</label>
                                <select id="selectCriarOrdemCliente" class="form-select">
                                    <option value="">Selecione um cliente</option>
                                    @foreach (var cliente in ViewBag.Clientes)
                                    {
                                        <option value="@cliente.idCliente">@cliente.Nome</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Data de Abertura</label>
                                <input type="date" class="form-control" id="txtCriarOrdemDataAbertura" required>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Previsão de Finalização</label>
                                <input type="date" class="form-control" id="txtCriarOrdemPrevisaoEntrega">
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Status</label>
                                <select class="form-select" id="selectCriarOrdemStatus" required>
                                    <option value="">Selecione o status</option>
                                    @foreach (var status in ViewBag.Status)
                                    {
                                        <option value="@status.idStatus">@status.Descricao</option>
                                    }
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-semibold">Descrição do Problema</label>
                                <textarea class="form-control" id="txtCriarOrdemDescricao" rows="3"></textarea>
                            </div>

                        </div>

                    </div>

                    <div class="modal-footer border-top-0 mt-2">
                        <button type="button" class="btn btn-secondary px-3" data-bs-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-danger px-4 fw-bold" onclick="CriarOrdem()">Cadastrar Ordem</button>
                    </div>

                </div>
            </div>
        </div>

    <div class="modal" id="modalEditarOS" tabindex="-1" aria-labelledby="modalEditarOSLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content rounded-4 shadow-lg border-0">

                <div class="modal-header bg-light border-bottom-0 pb-0">
                    <h5 class="modal-title text-danger fw-bold" id="modalEditarOSLabel">Editar Ordem de Serviço</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>

                <div class="modal-body">

                    <div class="row g-4">

                        <div class="col-md-12">
                                <label class="form-label fw-semibold">Cliente</label>
                            <select id="selectEditarOrdemCliente" class="form-select selectpicker">
                                    <option value="">Selecione um cliente</option>
                                    @foreach (var cliente in ViewBag.Clientes)
                                    {
                                            <option value="@cliente.idCliente">@cliente.Nome</option>
                                    }
                                </select>
                            </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Data de Abertura</label>
                            <input type="date" class="form-control" id="txtEditarOrdemDataAbertura" required>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Previsão de Finalização</label>
                            <input type="date" class="form-control" id="txtEditarOrdemPrevisaoEntrega">
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Status</label>
                            <select class="form-select selectpicker" id="selectEditarOrdemStatus" required>
                                <option value="">Selecione o status</option>
                                @foreach (var status in ViewBag.Status)
                                {
                                    <option value="@status.idStatus">@status.Descricao</option>
                                }
                            </select>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-semibold">Descrição do Problema</label>
                            <textarea class="form-control" id="txtEditarOrdemDescricao" rows="3"></textarea>
                        </div>

                    </div>

                </div>

                <div class="modal-footer border-top-0 mt-2">
                    <button type="button" class="btn btn-secondary px-3" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-danger px-4 fw-bold" onclick="AlterarOrdem()">Alterar Ordem</button>
                </div>

            </div>
        </div>
    </div>

        <div class="modal fade" id="modalConfirmarExclusao" tabindex="-1" aria-labelledby="modalConfirmarExclusaoLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content rounded-4">
                    <div class="modal-header bg-light border-0">
                        <h5 class="modal-title text-danger fw-bold" id="modalConfirmarExclusaoLabel">
                            Confirmar Exclusão de OS
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-body fs-5 text-center">
                        <p>Tem certeza que deseja excluir a Ordem de Serviço <strong id="numeroOSExclusao"></strong>?</p>
                        <p class="text-muted mb-0">Essa ação não poderá ser desfeita.</p>
                    </div>
                    <div class="modal-footer border-0 justify-content-center">
                        <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                            Cancelar
                        </button>
                        <button type="button" id="btnConfirmarExclusao" class="btn btn-danger px-4">
                            <i class="bi bi-trash-fill me-1"></i>Excluir OS
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalAdicionarPecas" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content rounded-4">
                    <div class="modal-header">
                        <h5 class="modal-title text-danger fw-bold">Adicionar Peças</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3">

                            <div class="col-md-3">
                                <label class="form-label fw-semibold">Quantidade</label>
                                <input type="number" class="form-control" id="txtQuantidadePeca" min="1" value="1">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Produto</label>
                                <select id="selectCriarOrdemProduto" class="form-select">
                                    <option value="">Selecione um produto</option>
                                    @foreach (var produto in ViewBag.Produtos)
                                    {
                                        <option value="@produto.idProduto">@produto.NomeProduto</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="button" class="btn btn-dark w-100" id="btnAddPeca" onclick="AdicionarPeca()">
                                    + Adicionar Peça
                                </button>
                            </div>
                            <div class="col-md-12"></div>

                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Codigo</th>
                                        <th>Peça</th>
                                        <th>Qtd</th>
                                        <th>Funções</th>
                                    </tr>
                                </thead>
                                <tbody id="listaPecas">
                                    <!-- linhas dinâmicas -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" id="btnSalvarPecas" onclick="SalvarItens()">Salvar</button>
                    </div>
                </div>
            </div>
        </div>

    <div class="modal" id="modalOrcamentoOS" tabindex="-1" aria-labelledby="modalOrcamentoOSLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content rounded-4 shadow-lg border-0">

                <div class="modal-header bg-light border-bottom-0 pb-0">
                    <h5 class="modal-title text-danger fw-bold" id="modalOrcamentoOSLabel">Orçamento da Ordem de Serviço</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>

                <div class="modal-body">

                    <div class="row g-4">

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Valor da Mão de Obra (R$)</label>
                            <input type="number" class="form-control" id="txtOrcamentoMaoDeObra"  onchange="CalcularValorOrcamento()">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Valor dos Materiais (R$)</label>
                            <input type="number" class="form-control" id="txtOrcamentoMateriais"  onchange="CalcularValorOrcamento()" disabled>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Desconto (%)</label>
                            <input type="number" class="form-control" id="txtOrcamentoDesconto"  onchange="CalcularValorOrcamento()">
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Taxas Extras (R$)</label>
                            <input type="number" class="form-control" id="txtOrcamentoTaxas"  onchange="CalcularValorOrcamento()">
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Valor Final (R$)</label>
                            <input type="number" class="form-control" id="txtOrcamentoValorFinal"  disabled>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Forma de pagamento</label>
                            <input type="text" class="form-control" id="txtOrcamentoFormaPagamento">
                        </div>

                    </div>

                </div>

                <div class="modal-footer border-top-0 mt-2">
                    <button type="button" class="btn btn-secondary px-3" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-danger px-4 fw-bold" onclick="SalvarOrcamento()">Salvar Orçamento</button>
                </div>

            </div>
        </div>
    </div>


        <div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3" style="z-index:2000"></div>

        <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>

        <script src="~/lib/dataTables/datatables.js" asp-append-version="true"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <link rel="stylesheet" href="https://cdn.datatables.net/2.3.5/css/dataTables.dataTables.css" />

        <script src="https://cdn.datatables.net/2.3.5/js/dataTables.js"></script>

        <script src="/js/pages/Ordem.js"></script>

</body>
</html>