@{
    ViewData["Title"] = "Login";
}

<!doctype html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>FastOS</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="card shadow border-0">
                    <div class="row g-0 align-items-center">
                        <!-- COLUNA ESQUERDA - IMAGEM -->
                        <div class="col-md-6 text-center p-4 bg-white">
                            <img src="https://yata-apix-dfa1080f-8135-4bff-8fd6-1240cc931450.s3-object.locaweb.com.br/0c04ed94395248eda9703f6d017bb16f.png"
                                 alt="Logo UTI do PC Americana"
                                 class="img-fluid"
                                 style="max-height: 300px;" />
                        </div>

                        <!-- COLUNA DIREITA - FORMULÁRIO -->
                        <div class="col-md-6 bg-white p-5">
                            <h2 class="card-title text-center mb-4 text-danger fw-bold">FastOS</h2>
                            <form id="loginForm" autocomplete="on" novalidate>
                                <div class="mb-4">
                                    <label for="login" class="form-label text-secondary fw-semibold">Login</label>
                                    <input type="text"
                                           class="form-control form-control-lg"
                                           id="txtEmailLogin"
                                           name="txtEmailLogin"
                                           placeholder="Usuário ou e-mail"
                                           required
                                           autocomplete="username" />
                                </div>
                                <div class="mb-4">
                                    <label for="senha" class="form-label text-secondary fw-semibold">Senha</label>
                                    <input type="password"
                                           class="form-control form-control-lg"
                                           id="txtSenhaLogin"
                                           name="txtSenhaLogin"
                                           placeholder="Digite sua senha"
                                           required
                                           autocomplete="current-password" />
                                </div>
                                @* <div class="mb-4 form-check">
                                    <input type="checkbox" class="form-check-input" id="remember" name="remember" />
                                    <label class="form-check-label text-secondary" for="remember">Lembrar-me</label>
                                </div> *@
                                <button type="button" class="btn btn-danger btn-lg w-100 fw-semibold" onclick="ValidarLoginDoUsuarioAoEntrar()">Entrar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Mensagem != null)
    {
        <p style="color:red">@ViewBag.Mensagem</p>
    }
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/pages/login.js"></script>

</body>
</html>


